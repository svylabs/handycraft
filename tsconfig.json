{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "dist/",
    "composite": true,
    "paths": {
      "app": ["./src/app"],
    }
  },
  "references": [
    { "path": "./src/app" }
  ],
  "include": [
    "src/**/*"
  ]
}
