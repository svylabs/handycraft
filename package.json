{
  "name": "handycraft",
  "description": "Handycraft is a web app that has handy tools for many different usecases",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "author": "SVY Labs B.V.",
  "engines": {
    "node": "^20.0.0"
  },
  "scripts": {
    "prepare": "npm run gcp-build",
    "pretest": "npm run gcp-build",
    "test": "c8 mocha -p -j 2 test/*.test.js --exit",
    "lint": "gts lint",
    "start": "node ./dist/index.js",
    "deploy": "gcloud app deploy",
    "clean": "gts clean",
    "compile": "tsc -p .",
    "fix": "gts fix",
    "build:app": "cd src/app && npm install && npm run build",
    "build": "tsc -p ./ && npm run build:app && npm run copy:app",
    "copy:app": "rm -rf ./public && mkdir public && cp -R src/app/dist/* public/.",
    "gcp-build": "tsc -p ."
  },
  "dependencies": {
    "@google-cloud/datastore": "^8.5.0",
    "@typescript-eslint/parser": "^6.0.0",
    "axios": "^1.6.7",
    "body-parser": "^1.20.2",
    "dotenv": "^16.4.5",
    "express": "^4.16.3",
    "url-safe-base64": "^1.3.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^18.13.0",
    "c8": "^8.0.0",
    "chai": "^4.3.7",
    "gts": "^5.0.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.0",
    "wait-port": "^1.0.0"
  }
}
